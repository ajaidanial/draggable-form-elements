root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
max_line_length = 80

[*.{ts,tsx,js,jsx}]
indent_size = 2

[Makefile]
trim_trailing_whitespace = false
max_line_length = 0

[{package.json,.travis.yml}]
indent_size = 2

[*.{html,css}]
indent_size = 4
